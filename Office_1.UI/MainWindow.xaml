<Window x:Class="Office_1.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Office_1.UI"
        mc:Ignorable="d"
        Title="Office_1" Height="450" Width="800"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <!--#region RightGrid -->

        <Grid x:Name="RightGrid" Grid.Column ="1" Background="#FFE0DFDF" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <Button x:Name="NewRequest" Command="{Binding ShowNewRequestGridCommand}" Content="Новая заявка" Grid.Column="1" Grid.Row="1" Margin="0, 30, 0, 0" Visibility="{Binding ShowNewRequestGridButtonVisibility}"/>
            <Button x:Name="AddRequest" Command="{Binding AddNewRequestCommand}" Content="Добавить заявку" Grid.Column="1" Grid.Row="1" Margin="0, 30, 0, 0" Visibility="{Binding AddNewRequestVisibility}"/>

            <Label Name="ShowLabel" Content="Показать:" Grid.Column="1" Grid.Row="2" Margin="0, 15, 0, 15" VerticalAlignment="Bottom" Visibility="{Binding FiltersVisibility}"/>

            <StackPanel x:Name="CharacteristicsOfOrdersStackPanel" Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" Margin="0, 10, 0, 10" Visibility="{Binding FiltersVisibility}">
                <CheckBox Content="Новые" Margin="0, 5, 0, 0" IsChecked="{Binding ShowNew}"/>
                <CheckBox Content="На рассмотрении" Margin="0, 5, 0, 0" IsChecked="{Binding ShowInReview}"/>
                <CheckBox Content="Рассмотренные" Margin="0, 5, 0, 0" IsChecked="{Binding ShowReviewed}"/>
                <CheckBox Content="Отклонённые" Margin="0, 5, 0, 0" IsChecked="{Binding ShowDeclined}" />
            </StackPanel>
        </Grid>

        <!--#endregion-->

        <!--#region RequestListGrid -->
        
        <Grid x:Name="RequestListGrid" Grid.Column ="0" Background="#FFE0DFDF" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <DataGrid x:Name="RequestsDataGrid" ItemsSource="{Binding Requests}" SelectedItem="{Binding SelectedItem}" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserSortColumns="True"  Grid.Column="0" ColumnWidth="*" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Id}" Header="№" IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding Client.Name}" Header="Клиент:" IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding Director}" Header="Руководитель:" IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding Subject}" Header="Тема:" IsReadOnly="True"/>
                    <DataGridCheckBoxColumn Binding="{Binding Status}" Header="Статус:" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!--#endregion-->

        <!--#region NewRequestGrid-->
        
        <Grid Name ="NewRequestGrid" Visibility="{Binding NewRequestGridVisibility}" Grid.RowSpan="2">
            
        </Grid>

        <!--#endregion-->
        
    </Grid>
</Window>
